# Postiz Production Environment Variables
# Copy this file to .env.production and fill in the values

# === Required Settings ===
DATABASE_URL="postgresql://user:password@host:port/database"
REDIS_URL="redis://user:password@host:port"
JWT_SECRET="your-super-secure-jwt-secret-minimum-32-characters"

# === Application URLs (Update with your domain) ===
FRONTEND_URL="https://your-domain.com"
NEXT_PUBLIC_BACKEND_URL="https://api.your-domain.com"
BACKEND_INTERNAL_URL="http://localhost:3000"

# === Node.js Configuration ===
NODE_ENV="production"
NODE_OPTIONS="--max-old-space-size=2048"
PORT="3000"

# === Storage Configuration ===
# Option 1: Cloudflare R2 (Recommended for production)
STORAGE_PROVIDER="cloudflare"
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_ACCESS_KEY="your-cloudflare-access-key"
CLOUDFLARE_SECRET_ACCESS_KEY="your-cloudflare-secret-access-key"
CLOUDFLARE_BUCKETNAME="your-bucket-name"
CLOUDFLARE_BUCKET_URL="https://your-bucket-url.r2.cloudflarestorage.com/"
CLOUDFLARE_REGION="auto"

# Option 2: Local Storage (Not recommended for production)
# STORAGE_PROVIDER="local"
# UPLOAD_DIRECTORY="/app/uploads"
# NEXT_PUBLIC_UPLOAD_STATIC_DIRECTORY="/uploads"

# === Email Configuration (Required for user activation) ===
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM_ADDRESS="noreply@your-domain.com"
EMAIL_FROM_NAME="Postiz"

# === Optional: Disable Registration ===
# DISABLE_REGISTRATION=true

# === Social Media API Keys ===
# X (Twitter)
X_API_KEY="your-x-api-key"
X_API_SECRET="your-x-api-secret"

# LinkedIn
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Facebook & Instagram
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Reddit
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"

# Discord
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# YouTube
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"

# TikTok
TIKTOK_CLIENT_ID="your-tiktok-client-id"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"

# === Payment Integration ===
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# === AI Integration ===
OPENAI_API_KEY="sk-your-openai-api-key"

# === Analytics (Optional) ===
PLAUSIBLE_DOMAIN="your-domain.com"
PLAUSIBLE_API_KEY="your-plausible-api-key"

POSTHOG_API_KEY="your-posthog-api-key"
POSTHOG_HOST="https://app.posthog.com"

# === Monitoring ===
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# === Security ===
CORS_ORIGIN="https://your-domain.com"
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# === Feature Flags ===
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true